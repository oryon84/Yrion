<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.yrion.yrion" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:theme="@android:style/Theme.Material" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Accueil"
            android:label="@string/title_activity_accueil" >
        </activity>
        <activity
            android:name=".view_parcelle"
            android:label="@string/title_activity_view_parcelle"

            android:parentActivityName=".Accueil" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.yrion.yrion.Accueil" />
        </activity>
    </application>

</manifest>
